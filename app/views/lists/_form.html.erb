<%= form_for(@list, data: { remote: true }) do |f| %>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <%= input_text(:name, f) %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
      <%= input_select(:access_type, f, @list.decorate.access_type_collection) %>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-12">
      <%= input_select(:status, f, @list.decorate.status_colection) %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 ">
      <div class="pull-right">
        <%= f.submit t("save"), class: "btn btn-danger" %>
        <%= content_tag :button, t("close"), class: "btn btn-default", data: { close: "form" } %>
      </div>
    </div>
  </div>
<% end %>
