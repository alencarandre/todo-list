<div class="card border-secundary mb-3 task_list" data-list="<%= list.id %>">
  <div class="card-header <%= list.status %>">
    <div class="pull-left title">
      <%= list.decorate.link_to_change_status %>
    </div>
    <div class="pull-right">
      <%= edit_list_link(list) %>
      <%= new_list_list_task_link(list) %>
      <%= link_to_favor_the_list(list) %>
      <%= content_tag :i, "", class: "fa fa-unlock" %>
      <%= content_tag :i, "", class: "fa fa-trash" %>
    </div>
  </div>
  <div class="card-body text-secondary tasks">
    <%= render partial: "lists/tasks", locals: { tasks: list.list_tasks.main_tasks, list: list } %>
  </div>
</div>
