<h2 class="page-title"><%= t("my_lists") %></h2>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="pull-right">
      <%= link_to t("new_list"), new_list_path, class: "btn btn-primary", data: { remote: true } %>
    </div>
  </div>
</div>

<div id="form_list_content">
</div>

<br />

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <%= render partial: "lists/list", locals: { list: list, screen: :mine } %>
    </div>
  <% end %>
</div>
