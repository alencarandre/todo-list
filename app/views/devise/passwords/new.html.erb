<h2 class="page-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { metho :post }) do |f| %>
  <div class="row">
    <div class="col-lg-6 col-md-6">
      <%= input_email(:email, f) %>
    </div>
  </div>

  <div class="row">
    <div class="actions col-lg-12 col-md-12">
      <%= f.submit t("btn_reset_password"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
